<h4 class="main__title mt-3">Sign Up</h4>

<div class="mt-4 shadow p-3 mb-5 bg-body rounded">
  {{#if error}}
    <p class="alert">{{error}}</p>
  {{/if}}
  <form action="/reg" method="post" novalidate>
    <div class="form-floating mb-3">
      <input type="text" class="form-control" placeholder="Userame" id="username" name="username">
      <label for="username">Username</label>
    </div>
    <div class="form-floating mb-3">
      <input type="email" class="form-control" placeholder="Email" id="email" name="email">
      <label for="email">Email</label>
    </div>
    <div class="form-floating mb-3">
      <input type="password" class="form-control" placeholder="Password" id="password" name="password">
      <label for="password">Password</label>
    </div>
    <button class="btn" style="width: 15%; background-color: orange;">Sign up</button>
    <p class="mt-3">Already have an Account?</p>
    <a href="/auth/login">Log In</a>
  </form>
</div>