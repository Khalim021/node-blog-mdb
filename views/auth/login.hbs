<h4 class="main__title mt-3">LogIn</h4>

<div class="mt-4 shadow p-3 mb-5 bg-body rounded">
  {{#if Error}}
    <p class="alert">{{Error}}</p>
  {{/if}}
  <form action="/auth/login" method="post">
    <div class="form-floating mb-3">
      <input 
      type="email" 
      class="form-control" 
      placeholder="Email" 
      id="email" 
      name="email"
      required>
      <label for="email">Email</label>
    </div>
    <div class="form-floating mb-3">
      <input 
      type="password" 
      class="form-control" 
      placeholder="Password" 
      id="password" 
      name="password"
      required>
      <label for="password">Password</label>
    </div>
    <button class="btn" style="width: 15%; background-color: orange;" type="submit">LogIn</button>
    <p class="mt-2">There is no account? Sign up for free.</p>
    <a href="/reg">Sign up</a>
  </form>
</div>










